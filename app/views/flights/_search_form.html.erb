<%= form_with url: '/flights', method: 'get', data: { turbo: false }, class: "search-bar" do %>
  <div class="search-field">
    <%= label_tag :departing_id, "Departing from: " %>
    <%= select_tag(:departing_id, options_for_select(airports, params[:departing_id])) %>
  </div>
  <div class="search-field">
    <%= label_tag :destination_id, "Flying to: " %>
    <%= select_tag(:destination_id, options_for_select(airports, params[:destination_id])) %>
  </div>
  <div class="search-field">
    <%= label_tag :num_passengers, "Number of passengers: " %>
    <%= select_tag(:num_passengers, options_for_select((1..4), params[:num_passengers])) %>
  </div>
  <div class="search-field">
    <%= label_tag :start_time, "Leaving on: " %>
    <%= select_tag(:start_time, options_for_select(flight_dates, params[:start_time])) %>
  </div>
  <%= submit_tag('Search') %>
<% end %>